
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape>
            <solid android:color="#8797F6"/>
            <corners android:radius="8dp"/>
        </shape>
    </item>
    <item>
        <shape>
            <gradient
                android:startColor="#03A9F4"
                android:endColor="#00BCD4"
                android:angle="90"/>
            <corners android:radius="8dp"/>
        </shape>
    </item>
</selector>